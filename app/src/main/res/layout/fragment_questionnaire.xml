<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_questionnaire"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- HEADER -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#00A676"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/back_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/logo_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/chat_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_chat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- CONTENU -->

    <!-- FOOTER -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Questionnaire"
            android:textColor="#00A676"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Avez-vous été malade\nces 7 derniers jours ?"
            android:textAlignment="center"
            android:textColor="#0057D9"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_yes"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/circle_green"
                android:backgroundTint="@android:color/transparent"
                android:text="OUI"
                android:textColor="#00A676"
                android:textStyle="bold" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_no"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:background="@drawable/circle_green"
                android:backgroundTint="@android:color/transparent"
                android:text="NON"
                android:textColor="#00A676"
                android:textStyle="bold" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_next"
            android:layout_width="220dp"
            android:layout_height="48dp"
            android:background="@drawable/circle_green"
            android:backgroundTint="@android:color/transparent"
            android:text="SUIVANT"
            android:textColor="#00A676"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#00A676"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="5">

        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_home"
            android:contentDescription="Accueil" />

        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_calendrier"
            android:contentDescription="Rendez-vous" />

        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_faq"
            android:contentDescription="Questions" />

        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_suivie"
            android:contentDescription="Suivi" />

        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_compte"
            android:contentDescription="Compte" />
    </LinearLayout>
</LinearLayout>
